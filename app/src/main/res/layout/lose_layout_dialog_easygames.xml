<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="370dp"
    android:layout_width="370dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"


    >


    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="330dp"
        android:layout_height="290dp"
        android:background="@drawable/blue"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">





        <ImageView
            android:id="@+id/buttonidcancellose"
            android:layout_width="50dp"
            android:layout_height="50dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/turquoise" />




        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/whiteclouds" />


        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="240dp"
            android:layout_height="160dp"
            android:columnCount="3"
            android:rowCount="2"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout3">

            <ImageView
                android:id="@+id/idavatar1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar1" />

            <ImageView
                android:id="@+id/idavatar2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar2" />

            <ImageView
                android:id="@+id/idavatar3"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:src="@drawable/avatar3" />

            <ImageView
                android:id="@+id/idavatar4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar4" />

            <ImageView
                android:id="@+id/idavatar5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar5" />

            <ImageView
                android:id="@+id/idavatar6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar6" />
        </GridLayout>




        <FrameLayout

            android:id="@+id/frameLayout3"
            android:layout_width="266dp"
            android:layout_height="73dp"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="266dp"
                android:layout_height="73dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/flag" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Your Avatar "
                android:textColor="@color/white"
                android:textSize="25sp" />

        </FrameLayout>







    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>



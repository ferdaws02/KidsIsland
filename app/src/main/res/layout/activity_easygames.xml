<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/playbg2"
    tools:context=".levels.easygames.Easygames">


    <HorizontalScrollView


        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="105dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
           >


            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/puzzelin"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"

                android:scaleType="centerCrop"
                android:src="@drawable/puzzle_bg"
                app:shapeAppearanceOverlay="@style/RondedSquare"


            />




            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/memory"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:layout_marginRight="20dp"

                android:layout_weight="0.5"

                android:scaleType="centerCrop"
                android:src="@drawable/memoryimage"

                app:shapeAppearanceOverlay="@style/RondedSquare"


                />

            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/commingsoon"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/soon"
                app:shapeAppearanceOverlay="@style/RondedSquare"


                />

            <com.google.android.material.imageview.ShapeableImageView

                android:id="@+id/commingsoon2"
                android:layout_width="300dp"
                android:layout_height="200dp"
                android:layout_gravity="center"

                android:layout_marginRight="20dp"
                android:layout_weight="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/soon"
                app:shapeAppearanceOverlay="@style/RondedSquare"


                />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>